<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_meal"
    app:startDestination="@id/mealCategoriesFragment">

    <fragment
        android:id="@+id/mealCategoriesFragment"
        android:name="com.pedrollaraf.mealapp.presentation.ui.fragment.MealCategoriesFragment"
        android:label="MealCategoriesFragment"
        tools:layout="@layout/fragment_meal_categories">

        <action
            android:id="@+id/action_mealCategoriesFragment_to_mealCountryFragment"
            app:destination="@id/mealCountryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="true"
            app:popUpTo="@id/mealCountryFragment"/>

    </fragment>


    <fragment
        android:id="@+id/mealCountryFragment"
        android:name="com.pedrollaraf.mealapp.presentation.ui.fragment.MealCountryFragment"
        android:label="MealCountryFragment"
        tools:layout="@layout/fragment_meal_country"/>

</navigation>